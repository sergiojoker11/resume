---
import dayjs from "dayjs";
import utc from "dayjs/plugin/utc";

dayjs.extend(utc);

const { lastModified } = Astro.props;

const lastModifiedFormatted = dayjs()
  .utc(lastModified)
  .format("HH:mm:ss DD MMMM YYYY UTC");
---

<div class="pb-[1rem] px-[1rem] md:p-0 break-normal">
  <div class = "flex flex-row gap-x-4 items-start mt-2 text-xs footer">
    <div class="flex-auto">
    </div>

    <div class="text-right">Last updated {lastModifiedFormatted}</div>

  </div>
</div>